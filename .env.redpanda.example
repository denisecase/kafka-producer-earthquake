# Kafka Provider
KAFKA_PROVIDER=redpanda

# Redpanda Broker Address
KAFKA_BROKER=<your-redpanda-cluster>:9092

# Kafka Topic
KAFKA_TOPIC=earthquake-events

# Consumer Group ID
KAFKA_CONSUMER_GROUP=earthquake-redpanda-group

# Authentication (if required)
KAFKA_SECURITY_PROTOCOL=PLAINTEXT  # Change if needed
KAFKA_SASL_MECHANISM=PLAIN  # Change if Redpanda requires authentication

# Log Level
LOG_LEVEL=INFO
